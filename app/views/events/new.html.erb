 <% if user_signed_in? %>

<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-black">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <h1>Create your Event !</h1>
                    <br>
                    <%= form_tag url_for(action: 'create'), method: "post" do %>
                        <div class="px-2">
                            <div class="form-group">
                                <label>Name Event</label>
                                <%= text_field_tag 'title', @event.title, :placeholder => 'title', class: "form-control" %> 
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <%= text_field_tag 'description', @event.description, :placeholder => 'description', class: "form-control" %> 
                            </div>
                            
                            <div class="form-group">
                                <label>Start date</label>
                                <%= text_field_tag 'start_date', @event.start_date, :placeholder => 'start date', class: "form-control" %> 
                            </div>
                            <div class="form-group">
                                <label>Duration</label>
                                <%= text_field_tag 'duration', @event.duration, :placeholder => 'duration', class: "form-control" %> 
                            </div>
                            <div class="form-group">
                                <label>Location</label>
                                <%= text_field_tag 'location', @event.location, :placeholder => 'location', class: "form-control" %> 
                            </div>
                            <div class="form-group">
                                <label>Price</label>
                                <%= text_field_tag 'price', @event.price, :placeholder => 'price', class: "form-control" %> 
                            </div>
                            
                           
                         <button type="submit" class="btn btn-primary btn-lg">Create Event</button>
            

                        </div>

                        <br><br><br>                       
                    <% end %>   
                </div>
            </div>
        </div>
    </div>
</section>
<% else %>
    <br><br><br><br>
    <div class="alert alert-danger" role="alert">
       <p class="text-center"> You have to log in </p>
    </div>

<% end %>
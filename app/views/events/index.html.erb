


<div class="row">
 <% @event.each do |event| %>
  <div class="col-md-4 box-shadow mt-5 mr- 3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">The event : <%= event.title %></h5>
        <p class="card-text">Description : <%= event.description %></p>
        <p class="card-text">Start date : <%= event.start_date %></p>
        <p class="card-text">Duration : <%= event.duration %></p>
        <p class="card-text">Location : <%= event.location %></p>
        <p class="card-text">Price : <%= event.price %></p>
        <div class="text-center">
         <%= link_to "Go for it !", event_path(event.id), class: "btn btn-primary" %>
         </div>
      </div>
    </div>
  </div>
  <% end %>

  